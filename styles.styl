@font-face
  font-family: 'Roboto'
  font-style: normal
  font-weight: 300
  src: local('Roboto Light'), local('Roboto-Light'), url(https://fonts.gstatic.com/s/roboto/v18/KFOlCnqEu92Fr1MmSU5fBBc4.woff2) format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

html, body
    width:100%
    height:100%
    margin:0
    padding:0
    font-family:Roboto
    font-weight:300

header
    padding:2rem 0
    width:100%
    box-shadow(3)
    text-align:center
    color:white
    background:linear-gradient(37deg,  darken(#010b2c,10%), darken(#010b2c,40%))
    div
        img
            display:inline-block
            height:220px
            vertical-align:middle

        div
            margin-left:40px
            display:inline-block
            vertical-align:middle
            text-align:left
            h1
                margin:15px
                margin-bottom:20px
                font-size:3.5rem
                font-weight:300
            a
                border:1px solid #ffffff2a
                font-size:16px
                color:white
                text-decoration:none
                padding:8px
                margin:20px 10px
                margin-left:15px
                transition:.5s
                background-color:#ffffff00
                &:hover
                    background-color:#ffffff15


main
    margin-top:15px
    min-height:calc(100% - 370px)
    a
        text-decoration:none
    width:80%
    margin-left:10%
    .card
        margin:10px 0
        box-shadow(2)
        padding:1rem
        color:white
        img
            display:inline-block
            vertical-align:middle
            height:130px
            margin-right:20px
        div
            display:inline-block
            vertical-align:middle
            h2
                font-size:2rem
                margin:10px 0
                font-weight:300

    #nevis
        background:linear-gradient(37deg,#2196F3,#64B5F6)
    #wod
        background:linear-gradient(37deg, #009248, #46b348)

footer
    margin-top:20px
    border-top:1px #bdbdbd solid
    width:80%
    margin-left:10%
    p
        margin:0
        padding:15px
        text-align:center
@media(min-width:1000px)
        header div div
        margin-left:100px
@media(max-width:800px)
    header div div
        margin-left:20px
    main .card
        text-align:center
        img
            display:block
            margin:auto
        div
            display:block




@media(max-width:530px)
    main
        width:90%
        margin-left:5%
    header
        text-align:center
        width:100%
        padding:2rem 0
        div
            display:block
            text-align:center
            div
                text-align:center
        img
            display:block
            margin:auto
            height:180px