@font-face
  font-family: 'Roboto'
  font-style: normal
  font-weight: 300
  src: local('Roboto Light'), local('Roboto-Light'), url(https://fonts.gstatic.com/s/roboto/v18/KFOlCnqEu92Fr1MmSU5fBBc4.woff2) format('woff2')
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

html, body
    width:100%
    height:100%
    margin:0
    padding:0

header
    padding:2rem
    color:white
    background-color:#2196F3
    text-align:center

    h1
        margin:0
        padding:0.5rem 0 1rem 0
        font-family:Roboto
        font-weight:300
        font-size:5rem
        line-height:5rem

    img
        height:18rem

    a
        display:inline-block
        padding:0.5rem
        border:1px solid white
        color:white
        background-color:transparent
        font-family:Roboto
        font-weight:300
        font-size:1.25rem
        text-decoration:none
        transition:.5s
        user-select: none
        -moz-user-select: none
        -webkit-user-select: none

        &:hover
            background-color:#fff4

main
    width:80%
    margin-top:1rem
    margin-left:10%

    h1
        display:block
        margin:1.5rem 0
        color:#2196F3
        font-family:Roboto
        font-weight:300
        font-size:3rem
    p
        font-family:Roboto
        font-weight:300
        font-size:1.25rem

    a
        width:100%
        height:100%
        text-decoration:none
        font-family:Roboto
        font-weight:300
        font-size:1.25rem

    #projects
        display:flex
        flex-wrap:wrap
        align-items:flex-start

        .project
            margin-bottom:1rem
            padding: 1rem 1rem 1rem 1rem
            text-align:center
            transition:.5s

            h1
                margin:0
                color:white
                font-family:Roboto
                font-weight:300
                font-size:2rem
            p
                margin:0
                color:white
                font-family:Roboto
                font-weight:300
                font-size:1rem

            a
                display:inline-block
                width:auto
                margin:1rem 0.5rem 0 0.5rem
                padding:0.5rem
                border:1px solid white
                color:white
                background-color:transparent
                font-family:Roboto
                font-weight:300
                font-size:1rem
                text-decoration:none
                transition:.5s
                user-select: none
                -moz-user-select: none
                -webkit-user-select: none

                &:hover
                    background-color:#fff4

                &:last-child:not()
                    margin-top:0.75rem

            img
                height:100px

            &:last-child
                margin-bottom:0

    #nevis
        background-color:#0D47A1

    #simon
        background-color:black

    #maze-checker
        background-color:#51B848

footer
    width:100%
    margin-top:20px
    color:white
    background-color:#1A75D2
    text-align:center

    p
        margin:0
        padding:6.5px
        font-family:Roboto
        font-weight:300
        font-size:18px



@media(min-width:1000px)
    main #projects .project p
        width:90%
        margin-left:5%

@media(min-width:800px)
    main .project
        width:calc(50% - 4rem)
        &:nth-child(odd)
            margin-right:2rem

@media(min-width:1000px)
    main
        width:70%
        margin-left:15%

@media(max-width:500px)
    header
        h1
            font-size:4rem
            line-height:4rem

        img
            height:15rem

    main h1
        font-size:2.5rem
        margin:1rem 0

    main #projects .project a
        width:calc(100% - 2rem)
        &:last-child
            margin-bottom:0rem

@media(max-width:400px)
    main
        width:90%
        margin-left:5%

@media(max-width:350px)
    header
        h1
            font-size:3.5rem
            line-height:3.5rem

        img
            height:12rem

@media(min-height:650px)
    footer.too-short
       position:absolute
       bottom:0
