@font-face
  font-weight: 400
  font-style: normal
  font-family: 'Cabin'
  src: local('Cabin'), local('Cabin-Regular'), url('https://fonts.gstatic.com/s/cabin/v12/u-4x0qWljRw-Pd8w__0.woff2') format('woff2') // fonts.gstatic.com/s/cabin/v12/u-4x0qWljRw-Pd8w__0.woff2) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%

header
  padding: 2rem
  background-color: #0d47a1
  color: white
  text-align: center

  h1
    margin: 0
    padding: 0.5rem 0 1rem
    font-weight: 400
    font-size: 5rem
    font-family: 'Cabin', Cabin, Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    line-height: 5rem

  img
    height: 18rem

  a
    display: inline-block
    padding: 0.5rem
    border: 1px solid white
    background-color: transparent
    color: white
    text-decoration: none
    font-weight: 300
    font-size: 1.25rem
    font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    transition: 0.5s
    user-select: none
    -moz-user-select: none
    -webkit-user-select: none

    &:hover
      background-color: #fff4

main
  margin-top: 1rem
  margin-left: 10%
  width: 80%

  h1
    display: block
    margin: 1.5rem 0
    color: #0d47a1
    font-weight: 400
    font-size: 3rem
    font-family: 'Cabin', Cabin, Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

  p
    font-weight: 300
    font-size: 1.25rem
    font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

  a
    width: 100%
    height: 100%
    text-decoration: none
    font-weight: 300
    font-size: 1.25rem
    font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

  #projects
    display: flex
    flex-wrap: wrap
    align-items: flex-start

    .project
      margin-bottom: 1rem
      padding: 1rem
      text-align: center
      transition: 0.5s

      h1
        margin: 0
        color: white
        font-weight: 400
        font-size: 2rem
        font-family: 'Cabin', Cabin, Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

      p
        margin: 0
        color: white
        font-weight: 300
        font-size: 1rem
        font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

      a
        display: inline-block
        margin: 1rem 0.5rem 0
        padding: 0.5rem
        width: auto
        border: 1px solid white
        background-color: transparent
        color: white
        text-decoration: none
        font-weight: 300
        font-size: 1rem
        font-family: Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
        transition: 0.5s
        user-select: none
        -moz-user-select: none
        -webkit-user-select: none

        &:hover
          background-color: #fff4

        &:last-child:not()
          margin-top: 0.75rem

      img
        height: 100px

      &:last-child
        margin-bottom: 0

    #nevis
      background-color: #0D47A1

    #simon
      background-color: black

    #maze-checker
      background-color: #51B848

    #circuits-timer
      background-color: #F44336

      img
        height: 80px

footer
  margin-top: 20px
  width: 100%
  background-color: #0d47a1
  color: white
  text-align: center

  p
    margin: 0
    padding: 6.5px
    font-weight: 400
    font-size: 18px
    font-family: Cabin, 'Cabin', Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

@media (min-width: 1000px)
  main #projects .project p
    margin-left: 5%
    width: 90%

@media (min-width: 800px)
  main .project
    width: calc(50% - 4rem)

    &:nth-child(odd)
      margin-right: 2rem

@media (min-width: 1000px)
  main
    margin-left: 15%
    width: 70%

@media (max-width: 500px)
  header
    h1
      font-size: 4rem
      line-height: 4rem

    img
      height: 15rem

  main h1
    margin: 1rem 0
    font-size: 2.5rem

  main #projects .project a
    width: calc(100% - 2rem)

    &:last-child
      margin-bottom: 0

@media (max-width: 400px)
  main
    margin-left: 5%
    width: 90%

@media (max-width: 350px)
  header
    h1
      font-size: 3.5rem
      line-height: 3.5rem

    img
      height: 12rem

@media (min-height: 650px)
  footer.too-short
    position: absolute
    bottom: 0
