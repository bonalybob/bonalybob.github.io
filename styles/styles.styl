@font-face
  font-weight: 400
  font-style: normal
  font-family: 'Cabin'
  src: local('Cabin'), local('Cabin-Regular'), url('https://fonts.gstatic.com/s/cabin/v12/u-4x0qWljRw-Pd8w__0.woff2') format('woff2')
  font-display: swap
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD

html, body
  overflow-x: hidden
  margin: 0
  padding: 0
  width: 100%
  font-weight: 300
  font-family: 'Cabin', Cabin, Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

h1, h2, h3, h4, h5, h6, a
  color: #0d47a1

header
  box-sizing: border-box
  margin-bottom: 2rem
  width: 100%
  background: linear-gradient(#2196F3, #1976D2)
  color: white
  text-align: center
  clip-path: polygon(
    0 0,
    100% 0,
    100% calc(100% - 5vw),
    0 100%
  )

  img
    padding-top: 0.4rem
    height: 300px

  h1
    margin: 16px 0
    padding-bottom: 3.5vw

    @media (max-width: 700px)
      padding-bottom: 5vw

    color: white
    font-weight: 300px
    font-size: 60px

nav
  width: 100%
  vertical-align: middle
  text-align: left

  h2
    display: inline-block
    margin: 0
    padding: 0.5rem
    color: white
    font-size: 30px

  #links
    position: absolute
    top: 0.5rem
    right: 0.5rem
    display: inline-block

  #menu-toggle
    display: none

  @media (max-width: 700px)
    #menu-toggle
      position: absolute
      top: 0
      right: 0
      z-index: 6
      display: inline-block
      padding: 0.65rem 0.5rem
      height: 2rem
      transition: 0.3s
      fill: white

      &:hover
        background-color: #1E88E5

    h2
      box-sizing: border-box
      width: 100%
      text-align: center

    #links
      position: absolute
      top: -110%
      right: 0
      z-index: 5
      width: 100%
      height: 100%
      background: #2196F3
      transition: 0.5s

      a
        display: block
        padding: 0.75rem
        width: auto
        text-align: center
        font-size: 1.1rem

        &:hover
          background-color: #1E88E5

        &:before
          display: none

        &:first-child
          margin-top: 3.3rem

      &.show
        top: 0

  a
    position: relative
    display: inline-block
    padding: 0.5rem 0.65rem
    color: white
    text-decoration: none
    transition: 0.3s

    &:before
      position: absolute
      bottom: 0
      left: 0
      visibility: hidden
      width: 100%
      height: 1px
      background-color: white
      content: ''
      transition: all 0.3s ease-in-out 0s
      transform: scaleX(0)
      -webkit-transform: scaleX(0)
      -webkit-transition: all 0.3s ease-in-out 0s

    &:hover:before
      visibility: visible
      transform: scaleX(1)
      -webkit-transform: scaleX(1)

main
  margin-left: 10%
  min-height: calc(100vh - 569px)
  width: 80%

  h1
    margin: 1rem 0
    font-size: 2.5rem

  p
    margin: 0.5rem 0

footer
  box-sizing: border-box
  margin-top: 2rem
  width: 100%
  background: #0D47A1
  color: white
  text-align: center

  p
    margin: 0
    padding: 0.5rem
    font-size: 18px

.project
  position: relative
  margin-bottom: 1rem
  padding: 1.5rem 10% 0.75rem
  text-align: center

  &#nevis
    @media (max-width: 700px)
      background: url('../assets/smallBackground.svg')
      background: url('../assets/smallBackground.png')
      background-color: #0d47a1
      background-size: cover
      background-repeat: no-repeat

    background: url('../assets/largeBackground.png')
    background: url('../assets/largeBackground.svg')
    background-color: #0d47a1
    background-size: cover
    background-repeat: no-repeat

  &#munro
    @media (max-width: 700px)
      background: url('../assets/smallBackground.svg')
      background: url('../assets/smallBackground.png')
      background-color: #9C27B0
      background-size: cover
      background-repeat: no-repeat

    background: url('../assets/largeBackground.png')
    background: url('../assets/largeBackground.svg')
    background-color: #9C27B0
    background-size: cover
    background-repeat: no-repeat

  &#simon
    background-color: black

  &#circuit-timer
    background-color: #F44336

    img
      max-width: 100%
      width: auto
      height: auto

  &#wod-maze
    background-color: #51b848

    &::after
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background: url('../assets/WOD.png')
      background-size: cover
      background-repeat: no-repeat
      content: ''
      opacity: 0.15

  h2
    margin: 0.5rem 0
    color: white
    font-size: 1.8rem

  p
    margin: 0.4rem
    color: white

  img
    height: 150px

  a
    display: inline-block
    margin: 0.3rem 0.4rem 0
    padding: 0.35rem 0.65rem
    border: 1px solid white
    color: white
    text-decoration: none
    transition: 0.3s

    &:hover
      background-color: alpha(white, 0.3)
